    <div class="container my-4">
        <h1 id="contact" class="text-md-start text-center fw-bold px-2" style="color: #0d6efd">Contact Us</h1>
        <form action="/contact" method="POST">
            <div class="my-3 px-2">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com"
                    name="email">
            </div>
            <fieldset class="row my-3 px-2">
                <legend class="col-form-label col-sm-2 pt-0">Select your category</legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="category" id="gridRadios1" value="Student"
                            checked>
                        <label class="form-check-label" for="gridRadios1">
                            Student
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="category" id="gridRadios2" value="Teacher">
                        <label class="form-check-label" for="gridRadios2">
                            Teacher
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="category" id="gridRadios3" value="Other">
                        <label class="form-check-label" for="gridRadios3">
                            Other
                        </label>
                    </div>
                </div>
            </fieldset>
            <div class="px-2">
                <select class="form-select my-3" name="area" aria-label="Default select example">
                    <option selected>Select the area you are facing problem in </option>
                    <option value="Interface">Interface</option>
                    <option value="Authentication">Authentication</option>
                    <option value="Creating/Joining a new Space">Creating/Joining a new Space</option>
                    <option value="Uploading Files">Uploading Files</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="my-3 px-2">
                <label for="exampleFormControlTextarea1" class="form-label">Elaborate your concern</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Comments"
                    name="comment"></textarea>
            </div>

            <div class="mx-auto w-50 mt-3 py-4">
                <button type="submit" class="btn btn-primary w-100 data-bs-toggle=" tooltip" data-bs-placement="bottom"
                    title="Click here to submit the form"">Submit</button>
            </div>
        </form>
    </div>

