{{>header}}

<title>CollegeSpace</title>

<body>

    {{>navbar}}
    {{>symbols}}
    
    {{#if contactsubmit}}
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
            <use xlink:href="#check-circle-fill" />
        </svg>
        <div>
            Contact form submitted successfully.
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if loggedInNow}}
    <div class="alert alert-primary d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:">
            <use xlink:href="#info-fill" />
        </svg>
        <div>
            Welcome {{fname}} {{lname}} {{!--displaying name of user--}}
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#if loggedOut}}
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:">
            <use xlink:href="#check-circle-fill" />
        </svg>
        <div>
            You have been logged out successfully.
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <div class="modal fade" id="signIn" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title bg-primary text-light d-inline-block p-2 rounded text-center w-50" id="staticBackdropLabel">Sign In</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3" action="/login" method="POST">
                        <div class="col-12">
                            <label for="loginEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="loginEmail" placeholder="name@example.com"
                                name="email">
                        </div>
                        <div class="col-12">
                            <label for="loginPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="loginPassword" name="password">
                        </div>
                        <div class="form-check mx-2">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Show Password
                            </label>
                        </div>
                        <div class="p-2">
                            <p style="text-align:center">Don't have an account? <a data-bs-toggle="modal"
                                    data-bs-dismiss="modal" href="#signUp">Register Here</a></p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center mx-auto w-100">
                            <button type="submit" class="btn btn-primary w-50">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="signUp" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title bg-primary text-light d-inline-block p-2 rounded text-center w-50" id="staticBackdropLabel">Sign Up</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="row g-3" action="/register" method="POST">
                        <div class="col-md-6">
                            <label for="inputFname" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="inputFname" name="firstname">
                        </div>
                        <div class="col-md-6">
                            <label for="inputLname" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="inputLname" name="lastname">
                        </div>
                        <div class="col-12">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="name@example.com"
                                name="email">
                        </div>
                        <div class="col-12">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="inputPassword" name="password">
                        </div>
                        <div class="col-12">
                            <label for="inputCpassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="inputCpassword" name="confirmpassword">
                        </div>

                        <div class="p-2">
                            <p style="text-align:center">Already have an account? <a data-bs-toggle="modal"
                                    data-bs-dismiss="modal" href="#signIn">Login Here</a></p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center mx-auto w-100">
                            <button type="submit" class="btn btn-primary w-50">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

  

    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">Now everything at your fingertips</h3>
                    <p class="text-dark">One stop destination for every resource</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/1.jpg" class="d-block w-100" style="opacity: 0.7;" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark shadow-light">Forgot tomorrow's timetable?</h3>
                    <p class="text-dark shadow-light">Schedule timetable and important announcements here</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="images/3.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-light shadow-dark">Your new library</h3>
                    <p class="text-light shadow-dark">Store anything and everything that you want</p>
                </div>
            </div>
        </div>
        <button class=" carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container my-4">
        <h1 id="about" class="text-md-start text-center fw-bold px-2" style="color: #0d6efd">About</h1>
        <div class="d-flex flex-column flex-md-row-reverse align-items-center my-4">
            <div class="flex-shrink-0 p-4">
                <img src="images/about.jpg" class="img-fluid" alt="...">
            </div>
